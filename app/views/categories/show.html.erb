
<%= render partial: "shares/header", locals: { session_user: @session_user } %>

<% if !flash[:notice].blank? %>
  <div class="notice">
      <%= flash[:notice] %>
  </div>
<% end %>

<div class="container-fluid">
    <!--<div class ="photo">
      <%= image_tag(@avatar)%>
    </div>
    <p> Print thing <%= puts @avatar %></p>-->
    <div class="categories index">
      <h2>Category: <%= @category.name %></h2>
      <p> Category parent: <%= @category.parent_category_id %> </p>
      <p> Subcategories: <%= @subcategories %> </p>





      <table class="subcategories" summary="Category list" width="inherit">
        <tr class="header">
          <th>Name</th>
          
        </tr>
        <% @subcategories.each do |subcategory| %>
        <tr>
          <td class="center"><%= subcategory.name %></td>

          <td class="actions">
            <%= link_to "Show", {:action => 'show', :id => subcategory.id}, :class => 'action show'   %>

          </td>


        </tr>
        <% end %>
      </table>

      <br />
      <hr class="faded"/>

    </div>
</div>
