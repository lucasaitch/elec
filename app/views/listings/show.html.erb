<%= render partial: "shares/header", locals: { session_user: @session_user } %>


    <% if !flash[:notice].blank? %>
    <div class="notice">
      <%= flash[:notice] %>
    </div>
    <% end %>



    <div class="container">
          <div class="panel panel-default panel-listing">
            <div class="panel-heading">
              <div class="container-fluid">
                <div class="column-xs-6 text-left" >
                  <p><%= link_to(@listing.name, {:action => 'show', :id => @listing.id}, :class => 'action show')%><p>
                </div>
                <div class="column-xs-6 text-left">
                  <h4><%=number_to_currency(@listing.price, :unit => "$")%></h4>
                </div>
              </div>
            </div>


            <div class="panel-body panel-body-listing">
              <div class="container-fluid">

                <div class="row">
                  <div class="col-xs-3 panel-column">
                    <%=image_tag(@listing.avatar.url(:medium), class: "img-responsive")%>
                  </div>

                  <div class="col-xs-5 panel-column">
                    <p><%= @listing.description %></p>
                    <p><%= @category.name %></p>

                      <div class= "listing-bottom text-right">

                        <p><%="Listing updated " + time_ago_in_words(@listing.created_at) + " ago  " %>

                          <%= link_to("Edit  ", {:action => 'edit', :id => @listing.id}, :class => 'action edit')%>

                          <%= link_to("Delete", {:action => 'delete', :id => @listing.id}, :class => 'action delete')%></p>
                        </div>

                  </div>
                  <div class="col-xs-4 panel-column">
                    <div class="form-bottom">
                    <%= form_tag listings_path, :method => "get" do %>
                    <textarea class="form-control" rows="3" name="Contact" id="Contact"></textarea>
                    <%= submit_tag("Contact Seller")  %>
                    <% end %>
                  </div>
                  </div>
                </div>


                </div>
              </div>

            </div>

      </div>
    </div>



    <hr class="faded"/>

  </div>
</div>
